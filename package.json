{
    "name": "vscode-spade",
    "displayName": "SPADE Language Support",
    "description": "Support for the SPADE L4 specification language",
    "version": "0.0.0",
    "publisher": "marcus-nl",
    "homepage": "https://github.com/marcus-nl/vscode-spade",
    "repository": {
        "type": "git",
        "url": "https://github.com/marcus-nl/vscode-spade.git"
    },
    "engines": {
        "vscode": "^1.0.0"
    },
    "categories": [
        "Languages"
    ],
	"keywords": [
		"spade"
	],
    "activationEvents": [
        "onLanguage:spade"
    ],
    "main": "./out/src/extension",
    "contributes": {
		"languages": [
			{
				"id": "spade",
				"extensions": [
					".spade",
                    ".pa"
				],
				"aliases": [
					"SPADE"
				]
			}
		],
        "grammars": [{
            "language": "spade",
            "scopeName": "source.spade",
            "path": "./syntaxes/spade.json"
        }]
    },
    "scripts": {
        "vscode:prepublish": "node ./node_modules/vscode/bin/compile",
        "compile": "node ./node_modules/vscode/bin/compile -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "dependencies": {
        "portfinder": "^0.4.0",
        "vscode-languageclient": "^2.2.1"
    },
    "devDependencies": {
        "typescript": "^1.8.5",
        "vscode": "^0.11.0"
    }
}